const groups = await getCollection("groups")
const groupsCounter = (await getCollection("groups")).length

const dayOrder = {
	–ü–æ–Ω–µ–¥–µ–ª—å–Ω–∏–∫: 1,
	–í—Ç–æ—Ä–Ω–∏–∫: 2,
	–°—Ä–µ–¥–∞: 3,
