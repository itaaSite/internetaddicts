---
import Layout from "../layout/Layout.astro";

const story = await Astro.glob("./stories/*.{md,mdx}");
---

<Layout
 title="Личные истории членов"
 desc="Личные истории членов АИЗ, которые прошли путь и пришли к душевному спокойствию."
>
 <div class="container">
  <div class="grid gap-5 grid-cols-2">
   {
    story.map((s) => (
     <article class="flex flex-col gap-2 bg-white p-4 rounded-lg">
      <h3 class="font-bold text-2xl">{s.frontmatter.title}</h3>
      <p class="font-normal leading-relaxed text-gray-500 line-clamp-2">
       {s.frontmatter.description}
      </p>
      <a href={s.url} class="underline underline-offset-4">
       Читать полностью
      </a>
     </article>
    ))
   }
  </div>
 </div>
</Layout>
