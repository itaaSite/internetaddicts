---
import StoryItem from "../components/blocks/StoryItem.astro";
import Layout from "../layout/Layout.astro";
---

<Layout
 title="Личные истории членов"
 desc="Личные истории членов АИЗ, которые прошли путь и пришли к душевному спокойствию."
>
 <div class="container">
  <section class="histories">
   <div class="grid">
    <!-- Начало -->
    <StoryItem />
    <!-- Конец -->
   </div>
  </section>
 </div>
</Layout>

<style>
 .histories {
  border-radius: var(--border-large);
  background-color: var(--white);
  padding: 30px;
 }
 @media (max-width: 576px) {
  .histories {
   margin: var(--mt) -30px 0;
  }
 }
 .grid {
  display: grid;
  align-items: flex-start;
  grid-template-columns: repeat(2, 1fr);
  gap: 30px;
 }
 @media (max-width: 992px) {
  .grid {
   grid-template-columns: repeat(1, 1fr);
  }
 }
</style>
