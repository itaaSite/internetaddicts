---
import Title from "@/components/Title.astro";
import Layout from "@/layout/Layout.astro";

// import NowGroup from "@/components/NowGroup"
import { Content as AboutCommnuity } from "@/data/page/about.mdx";
import { Icon } from "astro-icon/components";
---

<Layout
	containerOff
	title="Анонимные Интернет-Зависимые"
	desc="Это сообщество людей, которые поддерживают друг друга в преодолении проблем, вызванных одержимым использованием интернета и технических устройств."
>
	<section
		class="bg-gradient-to-b from-zinc-50 to-zinc-50 border border-[0.5px] border-zinc-300 md:my-12 md:mx-32 rounded-3xl py-14 md:py-24 px-5"
	>
		<Title />

		<section class="mt-10 flex gap-3 flex-wrap justify-center self-center">
			<a
				href="/stories"
				class="w-[180px] justify-center bg-gradient-to-bl from-pink-500 to-orange-500 self-center rounded-lg px-4 py-2 flex items-center gap-1 text-white text-center transition-all duration-75 ease-linear hover:translate-y-[1px]"
				><Icon name="mdi:format-list-group-plus" /><span>Личные истории</span></a
			>
			<a
				href="/groups"
				class="w-[180px] justify-center bg-gradient-to-bl from-teal-500 to-green-500 self-center rounded-lg px-4 py-2 flex items-center gap-1 text-white text-center transition-all duration-75 ease-linear hover:translate-y-[1px]"
				><Icon name="mdi:account-group" /><span>Найти Собрание</span></a
			>
			<a
				href="https://t.me/aiz_resources"
				target="_blank"
				class="w-[180px] justify-center bg-gradient-to-bl from-blue-500 to-sky-500 self-center rounded-lg px-4 py-2 flex items-center gap-1 text-white text-center transition-all duration-75 ease-linear hover:translate-y-[1px]"
				><Icon name="mdi:telegram" /><span>А.И.З. ресурсы</span></a
			>
		</section>
	</section>

	<section class="max-w-4xl mx-auto px-5 mb-14 mt-10">
		<!-- <NowGroup client:load /> -->

		<div
			class="prose max-w-none prose-lg prose-p:text-pretty prose-headings:text-balance xl:prose-xl leading-relaxed prose-a:no-underline prose-a:text-[#0098EA] prose-a:font-normal prose-a:hover:text-blue-500"
		>
			<AboutCommnuity />
		</div>
	</section>
</Layout>
