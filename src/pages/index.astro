---
import Title from "@/components/Title.astro";
import { Content as AboutCommnuity } from "@/data/page/about.mdx";
import Layout from "@/layout/Layout.astro";
import { Icon } from "astro-icon/components";
---

<Layout
	containerOff
	title="Анонимные Интернет-Зависимые"
	desc="Это сообщество людей, которые поддерживают друг друга в преодолении проблем, вызванных одержимым использованием интернета и технических устройств."
>
	<main class="flex flex-col gap-6 py-24 px-5">
		<Title />

		<section class="flex gap-3 flex-wrap justify-center self-center">
			<a
				href="/stories"
				class="justify-center border border-[#0071e3] text-[#0071e3] self-center rounded-full px-4 py-2 flex items-center gap-1 text-center transition-all duration-75 ease-linear hover:translate-y-[1px]"
				><Icon name="mdi:format-list-group-plus" /><span>Личные истории</span></a
			>
			<a
				href="/groups"
				class="justify-center bg-[#0071e3] text-white self-center rounded-full px-4 py-2 flex items-center gap-1 text-center transition-all duration-75 ease-linear hover:translate-y-[1px]"
				><Icon name="mdi:account-group" /><span>Найти Собрание</span></a
			>
			<a
				href="https://t.me/aiz_resources"
				target="_blank"
				class="justify-center border border-[#0071e3] text-[#0071e3] self-center rounded-full px-4 py-2 flex items-center gap-1 text-center transition-all duration-75 ease-linear hover:translate-y-[1px]"
				><Icon name="mdi:telegram" /><span>А.И.З. ресурсы</span></a
			>
		</section>
	</main>

	<section class="max-w-4xl mx-auto px-5 mb-14 mt-10">
		<div
			class="prose max-w-none prose-lg prose-p:text-pretty prose-headings:text-balance xl:prose-xl leading-relaxed prose-a:no-underline prose-a:text-[#0098EA] prose-a:font-normal prose-a:hover:text-blue-500"
		>
			<AboutCommnuity />
		</div>
	</section>
</Layout>
