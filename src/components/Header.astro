---
import { getCollection } from "astro:content"
import Link from "./Link.astro"
import Logo from "./Logo.astro"

const PostLayouts = (await getCollection("posts")).length
const story = (await getCollection("story")).length
const groups = (await getCollection("groups")).length
const speakers = (await getCollection("speakers")).length
---

<header class="py-5 bg-white">
	<div
		class="container max-w-6xl px-5 mx-auto gap-5 flex justify-between items-start md:items-center flex-col sm:flex-row"
	>
		<Logo />
		<nav class="flex gap-2 flex-wrap items-center">
			<Link href="/">🏠 Главная</Link>
			<Link href="/groups">🫂 Собрания ({groups})</Link>
			<Link href="/posts">🎉 Посты ({PostLayouts})</Link>
			<Link href="/stories">💚 Истории ({story})</Link>
			<Link href="/speakers">⭐ Спикерские ({speakers})</Link>
		</nav>
	</div>
</header>
