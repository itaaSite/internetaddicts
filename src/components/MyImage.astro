---
import { Image } from "astro:assets"

interface Props {
	src: ImageMetadata
	alt: string
}
const { src, alt } = Astro.props
---

<div class="overflow-hidden">
	{
		typeof src === "string" ? (
			<img
				src={src}
				alt={alt}
				class="rounded-2xl object-cover md:h-[375px] w-full"
				loading="lazy"
				decoding="async"
			/>
		) : (
			<Image
				src={src}
				alt={alt}
				format="webp"
				class="rounded-2xl object-cover md:h-[375px] w-full"
				width={820}
			/>
		)
	}
</div>
