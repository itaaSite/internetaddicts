---
export interface Props {
  data: {
    img?: string
    title: string
    description: string
    pubDate?: string
  }
  slug
}

const {
  data: { description, title, pubDate, img },
  slug,
} = Astro.props
---

<a href={`/posts/${slug}`} class="hover-top">
  <article class="rounded-lg pb-5 prose max-w-none">
    <!-- {
   img && (
    <CustomImage src={img} title="Фотография к посту" alt="Фотография к посту" loading />
   )
  } -->
    <h3>{title}</h3>
    <p class="line-clamp-2">{description}</p>
    {
      pubDate && (
        <time datetime={pubDate}>
          {new Date(pubDate).toLocaleDateString('ru-RU', {
            year: 'numeric',
            month: 'numeric',
            day: 'numeric',
          })}
        </time>
      )
    }
  </article>
</a>
