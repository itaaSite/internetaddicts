---
import BlockMsgs from "./blocks/BlockMsgs.astro";
import CTA from "./blocks/CTA.astro";
import image_svg from "/svg.svg";
---

<main>
 <div class="container">
  <div class="main">
   <div class="flex">
    <div class="col">
     <div class="col-item">
      <span>Проблема</span>
      <h1>
       Залипание в 📲 и <span>интернете</span>
      </h1>
     </div>
    </div>
    <div class="col">
     <img
      src={image_svg}
      loading="lazy"
      decoding="async"
      width="260"
      height="220"
      alt="АИЗ: переписки, новости, лента, посты, просмотр"
     />
    </div>
   </div>
  </div>
  <CTA />
  <BlockMsgs />
 </div>
</main>

<style>
 .main {
  padding: 30px;
  margin-top: var(--mt);
  background-color: var(--white);
  border-radius: var(--border-large);
 }
 .flex {
  display: flex;
  align-items: start;
 }
 .col {
  width: 100%;
  position: relative;
 }
 .col img {
  position: absolute;
  top: -95px;
  left: 0;
 }
 .col img:last-child {
  max-width: 100%;
  object-fit: cover;
 }
 .col:last-child {
  flex-grow: 1;
 }
 .col-item span {
  font-size: var(--size-link);
  font-weight: 400;
  color: var(--tag);
 }
 .col-item h1 {
  margin-top: 10px;
  line-height: 110%;
  font-size: var(--size-large);
  letter-spacing: 0.5px;
  font-weight: 700;
  color: var(--text);
 }
 .col-item h1 span {
  font-size: var(--size-large);
  font-weight: 900;
  background: var(--color-accent);
  color: transparent;
  -webkit-background-clip: text;
  background-clip: text;
 }

 @media (max-width: 992px) {
  .col img {
   display: none;
  }
 }
 @media (max-width: 768px) {
  .col {
   width: auto;
  }
 }
</style>
